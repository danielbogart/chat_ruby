.container
  .row
    .col-md-offset-3.col-md-6{ style: 'margin-top:6em;'}
      .well
        %h2 Login
        = form_tag sessions_path do
          .form-group
            = label_tag :email
            = text_field_tag :credential, '', class: 'form-control'
          .form-group
            = label_tag :password
            = password_field_tag :password, '', class: 'form-control'
          .form-group
            = submit_tag 'Login', class: 'btn btn-primary'