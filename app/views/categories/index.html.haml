.container
  .col-sm-8
    %h3 Please feel free to add categories that you think would be helpful 
    %br
    .list-group
      %ul
      - @categories.each do |category|
        %li.list-group-item
          %h4
            = link_to category.title, category_resources_path(category)
            .right.badge
              = link_to category.resources.count, category_resources_path(category), :class => "re-count"
      %br
      = render "categories/form"


