#mainHeader{ role: :banner, style: 'margin-bottom:6em;' }
	%nav.navbar.navbar-fixed-top.navbar-inverse{ role: :navigation }
		.navbar-inner
			.container
				.navbar-header
					%a.navbar-brand.brand{ href: '/' }
						%i.ll-logo{ style: 'color:#ed1e5a;' }
						Ruby SG
					%button.navbar-toggle{ "data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
						%span.sr-only Toggle navigation
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
				#top-navigation.nav-collapse.subnav-collapse.navbar-collapse.collapse
					%ul.nav.navbar-nav.navbar-right
						%li
							%a{ href: '/' }
								Home
						%li
							= link_to "Discussion", posts_path

							%li
								= link_to "Useful links", categories_path
								
						- if current_user.present?
							%li
								%a
									Hi
									= current_user.name.titleize
							%li
								= link_to 'Log Out', destroy_user_session_path, method: :delete
						- else
							%li
								= link_to 'Log In', new_user_session_path
							%li
								= link_to 'Sign Up', new_user_registration_path
							

